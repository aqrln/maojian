{
  "name": "metatests",
  "version": "0.6.0",
  "author": "Timur Shemsedinov <timur.shemsedinov@gmail.com>",
  "description": "Simple to use test engine for Metarhia technology stack",
  "license": "MIT",
  "readmeFilename": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/metarhia/metatests"
  },
  "keywords": [
    "test",
    "testing",
    "unittesting",
    "unit-testing",
    "tdd",
    "tap",
    "metarhia"
  ],
  "bugs": {
    "url": "https://github.com/metarhia/metatests/issues"
  },
  "main": "metatests.js",
  "bin": {
    "metatests": "bin/cli.js"
  },
  "files": [
    "bin/*.js",
    "lib/"
  ],
  "scripts": {
    "test": "npm run lint && ./bin/cli.js test --exclude test/fixtures",
    "test:unit": "node test/unit",
    "mutation": "stryker run",
    "perf": "./bin/cli.js benchmarks",
    "lint": "eslint . && prettier -c \"**/*.js\" \"**/*.json\" \"**/*.md\" \".*rc\" \"**/*.yml\"",
    "fmt": "prettier --write \"**/*.js\" \"**/*.json\" \"**/*.md\" \".*rc\" \"**/*.yml\""
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "@metarhia/common": "^1.3.0",
    "commander": "^2.19.0",
    "tap-mocha-reporter": "^4.0.1",
    "yaml": "^1.0.2"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^1.1.1",
    "@stryker-mutator/html-reporter": "^1.1.1",
    "@stryker-mutator/javascript-mutator": "^1.1.1",
    "eslint": "^5.15.3",
    "eslint-config-metarhia": "^7.0.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "prettier": "1.16.x"
  }
}
