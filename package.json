{
  "name": "metatests",
  "version": "0.5.0",
  "author": "Timur Shemsedinov <timur.shemsedinov@gmail.com>",
  "description": "Simple to use test engine for Metarhia technology stack",
  "license": "MIT",
  "readmeFilename": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/metarhia/metatests"
  },
  "keywords": [
    "test",
    "testing",
    "unittesting",
    "unit-testing",
    "tdd",
    "tap",
    "metarhia"
  ],
  "bugs": {
    "url": "https://github.com/metarhia/metatests/issues"
  },
  "main": "metatests.js",
  "bin": {
    "metatests": "./bin/cli.js"
  },
  "files": [
    "bin/*.js",
    "lib/"
  ],
  "scripts": {
    "test": "npm run lint && ./bin/cli.js test",
    "perf": "./bin/cli.js benchmarks",
    "lint": "eslint . && prettier -c \"**/*.js\" \"**/*.json\" \"**/*.md\" \".*rc\" \"**/*.yml\"",
    "fmt": "prettier --write \"**/*.js\" \"**/*.json\" \"**/*.md\" \".*rc\" \"**/*.yml\""
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "dependencies": {
    "@metarhia/common": "^1.0.0",
    "babel-polyfill": "^6.26.0",
    "karma": "^3.1.1",
    "karma-webpack": "^3.0.5",
    "webpack": "^4.26.0",
    "yaml": "^1.0.2"
  },
  "optionalDependencies": {
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-opera-launcher": "^1.0.0",
    "karma-safari-launcher": "^1.0.0"
  },
  "devDependencies": {
    "eslint": "^5.9.0",
    "eslint-config-metarhia": "^6.0.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "prettier": "1.16.x"
  }
}
